@model List<patiant>
@{
    ViewData["Title"] = "PatiantList";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

@RenderSection("Body") {

   <div class="container">
       <div class="row">
           <div class="col-lg-12">
               <table class="table table-bordered table-hover">
                   <thead>
                       <tr>
                           <th>Name</th>
                           <th>Bed No</th>
                           <th>Status</th>
                           <th>Action</th>
                       </tr>
                   </thead>

                   <tbody>
                       @foreach (var item in Model)
                       {
                       <tr>
                           <td>@item.Name</td>
                           <td>@item.BedNo</td>
                           <td>@item.Status</td>
                           <td>
                               <a asp-action="Exit" asp-route-id='@item.ID'>Exit</a>
                           </td>
                       </tr>
                       }
                   </tbody>

               </table>
           </div>
       </div>
   </div>
}

